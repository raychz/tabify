{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "npm",
        "script": "start",
        "label": "front-end",
        "isBackground": true,
        "presentation": {
          "focus": true,
          "panel": "dedicated"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "applyTo": "closedDocuments",
          "fileLocation": [
            "relative",
            "${cwd}"
          ],
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "(.*?)"
            },
            "endsPattern": {
              "regexp": "Compiled successfully."
            }
          }
        }
      },
        {
          "label": "post_debug_kill_front-end",
          "command": "echo ${input:terminate_front-end}",
          "type": "shell",
      },
    ],
    "inputs": [
        {
          "id": "terminate_front-end",
          "type": "command",
          "command": "workbench.action.tasks.terminate",
          "args": "front-end"
        },
      ]
}